<?import fr.minuskube.editor.control.ResizableCanvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import fr.minuskube.editor.scene.Scene.Canvas?>

<VBox fx:controller="fr.minuskube.editor.Controller" xmlns:fx="http://javafx.com/fxml"
      alignment="center" styleClass="pane" >

    <MenuBar>
        <Menu text="_File">
            <MenuItem fx:id="menuFileNew" text="_New Scene..." accelerator="CTRL+N" />
            <MenuItem fx:id="menuFileOpen" text="_Open Scene..." accelerator="CTRL+O" />
            <MenuItem fx:id="menuFileSave" text="_Save Scene" accelerator="CTRL+S" />
            <MenuItem fx:id="menuFileSaveAs" text="_Save Scene as..." accelerator="CTRL+SHIFT+S" />
            <MenuItem fx:id="menuFileImport" text="_Import into Scene..." />
            <MenuItem fx:id="menuFileExit" text="Exit" />
        </Menu>

        <Menu text="_Edit">
            <MenuItem text="Test"/>
            <MenuItem text="Test 2" />
        </Menu>

        <Menu text="_Options">
            <MenuItem text="Test" />
            <MenuItem text="Test 2" />
        </Menu>
    </MenuBar>

    <VBox VBox.vgrow="ALWAYS" styleClass="pane">
        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.2" styleClass="pane">
            <VBox styleClass="pane" minWidth="150" maxWidth="300">
                <SplitPane VBox.vgrow="ALWAYS" orientation="VERTICAL" dividerPositions="0.6" styleClass="pane">
                    <ScrollPane minHeight="200" fitToWidth="true" fitToHeight="true" styleClass="pane" />
                    <ScrollPane minHeight="200" fitToWidth="true" fitToHeight="true" styleClass="pane" />
                </SplitPane>
            </VBox>

            <VBox styleClass="pane">
                <SplitPane VBox.vgrow="ALWAYS" orientation="VERTICAL" dividerPositions="0.8" styleClass="pane">
                    <ResizableCanvas styleClass="scene-canvas">
                        <canvas>
                            <Scene.Canvas fx:id="sceneCanvas" />
                        </canvas>
                    </ResizableCanvas>

                    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="pane" />
                </SplitPane>
            </VBox>
        </SplitPane>
    </VBox>

</VBox>